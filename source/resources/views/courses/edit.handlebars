<div class="mt-4">
  <h3>Cập nhật</h3>
  <form  method="POST" action="/courses/{{courses._id}}?_method=PUT">
    <div class="form-group">
      <label for="exampleInputEmail1">Tên</label>
      <input
        type="text"
        class="form-control"
        value="{{courses.name}}"
        id="name"
        name="name"
      />
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">mô Tả</label>
      <textarea
        type="text"
        class="form-control"
        value="{{courses.description}}"
        id="description"
        name="description"
      ></textarea>>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">video</label>
      <input
        type="text"
        class="form-control"
        value="{{courses.video}}"
        id="video"
        name="video"
      />
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Nội dung bài viết</label>
      <input
        type="text"
        class="form-control"
        value="{{courses.content}}"
        id="content"
        name="content"
      />
    </div>
    <button type="submit" class="btn btn-primary">Cập Nhật</button>
  </form>
</div>